gcloud auth login

gcloud auth configure-docker asia-south1-docker.pkg.dev

# from project root
docker build --platform linux/amd64 -t \
  asia-south1-docker.pkg.dev/gentle-scene-466610-a2/online-learning-portal/backend:latest \
  ./Backend

docker push asia-south1-docker.pkg.dev/gentle-scene-466610-a2/online-learning-portal/backend:latest

docker build --platform linux/amd64 \
  --build-arg VITE_BACKEND_URL=https://edu.onthegoalways.com \
  -t asia-south1-docker.pkg.dev/gentle-scene-466610-a2/online-learning-portal/frontend:latest \
  ./Frontend

docker push asia-south1-docker.pkg.dev/gentle-scene-466610-a2/online-learning-portal/frontend:latest

docker compose pull / docker compose -f cloud-docker-compose.yml pull 
docker compose up -d / docker compose -f cloud-docker-compose.yml up -d

docker compose logs -f backend / docker compose -f cloud-docker-compose.yml logs -f backend
docker compose logs -f cloudsql-proxy
docker compose logs -f frontend / docker compose -f cloud-docker-compose.yml logs -f frontend

# Delete all images
docker rmi $(docker images -a -q) 


gcloud compute instance-groups unmanaged create edu-instance-group \
    --zone=asia-south1-a

gcloud compute instance-groups unmanaged add-instances edu-instance-group \
    --instances=online-learning-portal-vm \
    --zone=asia-south1-a
34.54.53.252

gcloud compute instance-groups unmanaged set-named-ports edu-instance-group \
    --named-ports=http:80 \
    --zone=asia-south1-a




